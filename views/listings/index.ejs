<!-- style tag for home page !  -->
<style>
#filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

.filter {
    text-align: center;
    margin-right: 2rem;
    opacity: 0.75;
    flex: 1;
}

.filter:hover {
    opacity: 1;
    cursor: pointer;
}

.filter p {
    font-size: 0.8rem;
}

.toggle-button {
    display: none;
    background-color: #333;
    color: #fff;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    font-size: 1rem;
}

/* Media queries */
@media (max-width: 1200px) {
    .filter:nth-child(n+6) {
        display: none;
    }
}

@media (max-width: 992px) {
    .filter:nth-child(n+4) {
        display: none;
    }
}

@media (max-width: 768px) {
    .filter:nth-child(n+3) {
        display: none;
    }
}

@media (max-width: 576px) {
    .toggle-button {
        display: block;
    }

    #filters {
        display: none;
        flex-direction: column;
        width: 100%;
    }

    .filter {
        margin: 1rem 0;
    }

    #filters.active {
        display: flex;
    }
}

.tax-info {
    display: none;
}

.tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
    margin-left: 2rem;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;

}
</style>
